<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.retailers.fragments.DownloadedCardFragment">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/noDownloadLayout"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_cloud_download_black_24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:text="No downloaded card until now ):"
                android:textColor="@color/errorColor"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    />
                <TextView
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Card type"
                    />
                <TextView
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    />
                <TextView
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Download date"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>



</ScrollView>